<div class="container">
  <h1 class="text-center">CADASTRAR USU√ÅRIO</h1>
  <form action="/edit" method="post">
    <input type="hidden" name="txtId" value="{{usuario.ID}}" />
    <div class="row">
      <div class="col-6 mb-3">
        <label for="txtNome" class="form-label">Nome</label>
        <input
          type="text"
          class="form-control"
          id="txtNome"
          name="txtNome"
          value="{{usuario.Nome}}"
        />
      </div>
      <div class="col-6 mb-3">
        <label for="txtSenha" class="form-label">Cargo</label>
        <input
          type="text"
          class="form-control"
          id="txtCargo"
          name="txtCargo"
          value="{{usuario.Cargo}}"
        />
      </div>
      <div class="col-6 mb-3">
        <label for="txtEmail" class="form-label">E-mail</label>
        <input
          type="email"
          class="form-control"
          id="txtEmail"
          name="txtEmail"
          value="{{usuario.Email}}"
        />
      </div>
      <div class="col-6 mb-3">
        <label for="txtSenha" class="form-label">Senha</label>
        <input
          type="password"
          class="form-control"
          id="txtSenha"
          name="txtSenha"
          value="{{usuario.Senha}}"
        />
      </div>
      <button type="submit" class="btn btn-primary">EDITAR</button>
    </div>
  </form></div>