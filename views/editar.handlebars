<!-- Font Icon -->
<link
  rel="stylesheet"
  href="../fonts/material-icon/css/material-design-iconic-font.min.css"
/>

<!-- Main css -->
<link rel="stylesheet" href="../css/style.css" />
<div class="main">
  <!-- Sign up form -->
  <section class="signup">
    <div class="container">
      <div class="signup-content">
        <div class="signup-form">
          <h4 class="form-title"> Edição de usuário</h4>
          <form action="/edit" method="POST">
            <input
              type="hidden"
              name="txtId"
              id="txtId"
              value="{{usuario.ID}}"
            />
            <div class="form-group">
              <label for="name"><i
                  class="zmdi zmdi-account material-icons-name"
                ></i></label>
              <input
                type="text"
                name="txtName"
                id="txtName"
                placeholder="Nome"
                value="{{usuario.Nome}}"
              />
            </div>
            <div class="form-group">
              <label for="email"><i class="zmdi zmdi-account-box"></i></label>
              <input
                type="txt"
                name="txtUser"
                id="txtUser"
                placeholder="Username"
                value="{{usuario.Username}}"
              />
            </div>
            <div class="form-group">
              <label for="email"><i class="zmdi zmdi-email"></i></label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="E-mail"
                value="{{usuario.Email}}"
              />
            </div>
            <div class="form-group">
              <label for="txtPass"><i class="zmdi zmdi-card-travel"></i></label>
              <input
                type="text"
                name="txtCargo"
                id="txtCargo"
                placeholder="Cargo"
                value="{{usuario.Cargo}}"
              />
            </div>
            <div class="form-group form-button">
              <input type="submit" class="btn btn-warning" value="Editar" />
            </div>
          </form>
        </div>
        <div class="signup-image">
          <figure><img
              src="../images/signup-image.jpg"
              alt="sing up image"
            /></figure>
        </div>
      </div>
    </div>
  </section>
</div>
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="../js/main.js"></script>